<Login>:
    name: "login"

    email: email
    password: password

    FloatLayout:

        Label:
            text:"Email: "
            font_size: 24
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: None, None
            size: self.texture_size

        TextInput:
            id: email
            font_size: 24
            multiline: False
            pos_hint: {"x": 0.30 , "top":0.9}
            size_hint: 0.4, 0.07

        Label:
            text:"Password: "
            font_size: 24
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: None, None
            size: self.texture_size

        TextInput:
            id: password
            font_size: 24
            multiline: False
            password: True
            pos_hint: {"x": 0.30, "top":0.7}
            size_hint: 0.4, 0.07

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.3, 0.15
            font_size: 24
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()


